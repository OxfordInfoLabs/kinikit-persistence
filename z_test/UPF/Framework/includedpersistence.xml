<UPF>

	<Engines>

		<ObjectIndexPersistenceEngine identifier="sql-slave">
			<DatabaseConnection>
				<MySQLDatabaseConnection host="yourhost"
					database="ping" username="ooa" password="ooa" port="3306" />
			</DatabaseConnection>
		</ObjectIndexPersistenceEngine>

	</Engines>

	<OptimisticLockingProvider>
		<SQLOptimisticLockingProvider />
	</OptimisticLockingProvider>

	<Interceptors>
		<TestObjectInterceptor1 phpNameSpace="Kinikit\Persistence\UPF\Framework" />
	</Interceptors>

	<FieldFormatters>
		<DateFieldFormatter identifier="britishdateformat" />
		<DateFieldFormatter identifier="britishdatetimeformat"
			sourceFormat="Y-m-d H:i:s" targetFormat="d/m/Y H:i:s" />
		<DateFieldFormatter identifier="britishdatesmalltimeformat"
			sourceFormat="Y-m-d H:i:s" targetFormat="d/m/Y H:i" />
	</FieldFormatters>



	<ObjectMappers>

		<Object className="Kinikit\Persistence\UPF\Framework\Address">
			<Fields>
				<Field fieldName="streetAddress" required="true" />
				<Field fieldName="city" primaryKey="true" />
			</Fields>
		</Object>

	</ObjectMappers>



</UPF>
